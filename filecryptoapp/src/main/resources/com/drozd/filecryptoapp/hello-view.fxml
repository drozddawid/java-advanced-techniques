<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="510.0" prefWidth="643.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.drozd.filecryptoapp.Controller">
   <left>
      <VBox fx:id="chooseAlgorithmComboBox" prefHeight="510.0" prefWidth="641.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Keystore password:" />
            <PasswordField fx:id="keystorePasswordField" promptText="keystore password" styleClass="text-area" />
            <HBox spacing="8.0">
               <children>
                  <Label text="Keystore: " />
                  <Label fx:id="keystoreFileLabel" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#onSelectKeyStoreFileClick" prefHeight="26.0" prefWidth="105.0" text="Select" />
            <Label text="Key: " />
            <ComboBox fx:id="chooseKeyComboBox" onAction="#onChooseKey" prefHeight="26.0" prefWidth="275.0" styleClass="combo-box" />
            <Label text="Algorithm: " />
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="chooseAlgComboBox" onAction="#onSetAlgorithm" prefHeight="26.0" prefWidth="274.0" />
                  <Button fx:id="chooseAsymetricEncKeyTypeButton" mnemonicParsing="false" onAction="#onChooseAsymetricEncKeyButtonClick" text="Encrypt with public key / Decrypt with private key" />
               </children>
            </HBox>
            <HBox spacing="8.0">
               <children>
                  <Label text="Input file:  " />
                  <Label fx:id="inputFileLabel" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#onSelectInputFileClick" prefHeight="26.0" prefWidth="104.0" text="Select" />
            <HBox spacing="8.0">
               <children>
                  <Label text="Output file:  " />
                  <Label fx:id="outputFileLabel" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onSelectOutputFileClick" prefHeight="26.0" prefWidth="103.0" text="Select" />
                  <Button mnemonicParsing="false" onAction="#onSwapFilesButtonClick" prefHeight="26.0" prefWidth="100.0" text="Swap files" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onEncryptButtonClick" text="Encrypt" />
                  <Button mnemonicParsing="false" onAction="#onDecryptButtonClick" text="Decrypt" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Label fx:id="infoLabel" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
</BorderPane>
