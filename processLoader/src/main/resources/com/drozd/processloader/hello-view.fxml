<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@stylesheets.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.drozd.processloader.Controller">
   <bottom>
      <HBox prefWidth="600.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="chooseDirButton" mnemonicParsing="false" onAction="#onChooseDirectoryButtonClick" prefHeight="25.0" text="Choose class source directory" />
            <Button fx:id="loadButton" disable="true" mnemonicParsing="false" onAction="#onLoadButtonAction" prefHeight="25.0" prefWidth="80.0" text="Load" />
            <Button fx:id="unloadButton" disable="true" mnemonicParsing="false" onAction="#unloadButtonOnAction" prefHeight="25.0" prefWidth="80.0" text="Unload" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
   </bottom>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
         <children>
            <Label text="Loaded classes:" />
            <ListView fx:id="classListView" onMouseClicked="#onClassListViewClick" prefHeight="343.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </left>
   <right>
      <VBox fx:id="statusBarContainer" prefHeight="558.0" spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label prefHeight="17.0" prefWidth="218.0" text="Tasks: (drag on task to see tooltip)" />
         </children>
      </VBox>
   </right>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="8.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label fx:id="instructionLabel" text="Here you will see instructions. (Click on processor class)" />
               </children>
            </HBox>
            <TextField fx:id="inputTextField" prefHeight="25.0" prefWidth="321.0" />
            <HBox>
               <children>
                  <Label prefHeight="18.0" prefWidth="53.0" text="Output:" />
               </children>
            </HBox>
            <TextField fx:id="outputTextField" editable="false" prefHeight="25.0" prefWidth="321.0" />
            <Button fx:id="executeButton" mnemonicParsing="false" onAction="#executeButtonOnAction" text="Execute" />
            <HBox>
               <children>
                  <Label fx:id="infoLabel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
